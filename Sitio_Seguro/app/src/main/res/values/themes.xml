<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Premium Dark Graphite Theme - Sophisticated & Classy -->
    <style name="Theme.SecureVault" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors - Dark graphite -->
        <item name="colorPrimary">@color/graphite_medium</item>
        <item name="colorPrimaryVariant">@color/graphite_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Secondary colors - Subtle accent -->
        <item name="colorSecondary">@color/accent_interaction</item>
        <item name="colorSecondaryVariant">@color/accent_subtle</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Background colors - Deep graphite -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_elevated</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar - seamless dark -->
        <item name="android:statusBarColor">@color/graphite_darkest</item>
        <item name="android:navigationBarColor">@color/graphite_darkest</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Elevation and shadows -->
        <item name="elevationOverlayEnabled">false</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.SecureVault.Headline</item>
        <item name="textAppearanceBody1">@style/TextAppearance.SecureVault.Body</item>
        
        <!-- Material Design 3 refinements -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SecureVault.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.SecureVault.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.SecureVault.LargeComponent</item>
    </style>
    
    <!-- Shape appearances for rounded components -->
    <style name="ShapeAppearance.SecureVault.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.SecureVault.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    
    <style name="ShapeAppearance.SecureVault.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
    
    <!-- Button styles - Elegant and rounded -->
    <style name="Widget.SecureVault.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="backgroundTint">@color/graphite_light</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Widget.SecureVault.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="strokeColor">@color/stroke_elegant</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Card style - Elevated elegance -->
    <style name="Widget.SecureVault.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/surface_elevated</item>
        <item name="contentPadding">24dp</item>
        <item name="strokeColor">@color/stroke_elegant</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Text Input Layout - Refined -->
    <style name="Widget.SecureVault.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/stroke_elegant</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>
    
    <!-- Typography - Clean and modern -->
    <style name="TextAppearance.SecureVault.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.SecureVault.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="lineHeight">24sp</item>
    </style>
    
    <!-- Title text -->
    <style name="TextAppearance.SecureVault.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <!-- Subtitle text -->
    <style name="TextAppearance.SecureVault.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
    
    <!-- Dialog style - Elegant rounded -->
    <style name="Theme.SecureVault.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="dialogCornerRadius">24dp</item>
        <item name="android:background">@color/surface_elevated</item>
    </style>
</resources>
