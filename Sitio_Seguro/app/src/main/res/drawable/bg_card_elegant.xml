<?xml version="1.0" encoding="utf-8"?>
<!-- Elegant rounded card with subtle depth -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Subtle shadow -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#08000000"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Main card surface -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_elevated"/>
            <corners android:radius="24dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/stroke_elegant"/>
        </shape>
    </item>
    
    <!-- Subtle inner highlight -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#08FFFFFF"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:type="linear"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
</layer-list>
