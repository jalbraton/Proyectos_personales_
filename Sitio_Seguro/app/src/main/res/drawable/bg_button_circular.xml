<?xml version="1.0" encoding="utf-8"?>
<!-- Circular action button with radial depth -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_dark">
    <item>
        <layer-list>
            <!-- Outer ring highlight -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#15FFFFFF"/>
                </shape>
            </item>
            
            <!-- Main circular surface -->
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape android:shape="oval">
                    <gradient
                        android:gradientRadius="48dp"
                        android:startColor="@color/graphite_light"
                        android:centerColor="@color/graphite_medium"
                        android:endColor="@color/graphite_dark"
                        android:type="radial"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/stroke_elegant"/>
                </shape>
            </item>
            
            <!-- Inner radial highlight -->
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape android:shape="oval">
                    <gradient
                        android:gradientRadius="30dp"
                        android:startColor="#18FFFFFF"
                        android:centerColor="#00000000"
                        android:endColor="#00000000"
                        android:type="radial"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
