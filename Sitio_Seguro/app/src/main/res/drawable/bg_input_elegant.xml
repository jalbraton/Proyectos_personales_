<?xml version="1.0" encoding="utf-8"?>
<!-- Elegant text input area with subtle border -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Subtle shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#06000000"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Main input surface -->
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface"/>
            <corners android:radius="20dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/border_subtle"/>
        </shape>
    </item>
    
    <!-- Inner subtle texture -->
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#04FFFFFF"
                android:endColor="#00000000"
                android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
</layer-list>
