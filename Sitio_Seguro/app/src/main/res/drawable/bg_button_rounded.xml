<?xml version="1.0" encoding="utf-8"?>
<!-- Circular/pill-shaped button with subtle radial gradient -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_dark">
    <item>
        <layer-list>
            <!-- Subtle outer glow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#10FFFFFF"/>
                    <corners android:radius="28dp"/>
                </shape>
            </item>
            
            <!-- Main button surface -->
            <item
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="@color/graphite_light"
                        android:endColor="@color/graphite_medium"
                        android:type="linear"/>
                    <corners android:radius="28dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/stroke_elegant"/>
                </shape>
            </item>
            
            <!-- Inner subtle highlight -->
            <item
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="#12FFFFFF"
                        android:centerColor="#00000000"
                        android:endColor="#00000000"
                        android:type="linear"/>
                    <corners android:radius="28dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
