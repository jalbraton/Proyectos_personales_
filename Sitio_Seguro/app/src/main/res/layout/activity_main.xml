<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_graphite_texture">

    <!-- Elegant Top Bar with Settings -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings_elegant"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"/>

    </LinearLayout>

    <!-- Elegant Central Lock Icon Area -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lockCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:background="@drawable/bg_card_elegant">

            <!-- Elegant Lock Icon -->
            <ImageView
                android:id="@+id/lockIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_lock_elegant"
                android:contentDescription="Security Lock"/>

            <!-- Text & Files Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text &amp; Files"
                android:textSize="15sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.08"
                android:layout_marginTop="20dp"/>

            <!-- Small Settings Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings_elegant"
                android:layout_marginTop="12dp"
                android:alpha="0.6"
                android:contentDescription="Options"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Circular Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="48dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lockCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Encrypt Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="32dp">

            <ImageButton
                android:id="@+id/btnEncrypt"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@android:drawable/ic_lock_lock"
                android:background="@drawable/bg_button_circular"
                android:tint="@color/text_primary"
                android:contentDescription="Encrypt"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encrypt"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

        <!-- Decrypt Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="32dp">

            <ImageButton
                android:id="@+id/btnDecrypt"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:background="@drawable/bg_button_circular"
                android:tint="@color/text_primary"
                android:contentDescription="Decrypt"
                android:elevation="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decrypt"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Elegant Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/surface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Subtle divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_gravity="top"/>

        <!-- Files Icon -->
        <ImageButton
            android:id="@+id/btnFiles"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_agenda"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/text_secondary"
            android:contentDescription="Files"/>

        <!-- Messages Icon -->
        <ImageButton
            android:id="@+id/btnMessages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_dialog_email"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/text_secondary"
            android:contentDescription="Messages"/>

        <!-- Info Icon -->
        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_dialog_info"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/text_secondary"
            android:contentDescription="Info"/>

        <!-- Settings Icon -->
        <ImageButton
            android:id="@+id/btnSettingsBottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_settings_elegant"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
