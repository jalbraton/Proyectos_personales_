<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar with Minimalist Design -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface"
            android:elevation="0dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Brushed Metal Divider Line -->
            <View
                android:id="@+id/topDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/brushed_metal_bar"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Minimalist Logo in Top Right -->
            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_logo_minimalist"
                android:contentDescription="Logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/topDivider"/>

            <!-- GitHub Icon -->
            <ImageView
                android:id="@+id/githubIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_github"
                android:contentDescription="GitHub"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/topDivider"/>

            <!-- Hint for double tap to add alarm -->
            <TextView
                android:id="@+id/hintText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:text="Doble toque para aÃ±adir alarma"
                android:textSize="11sp"
                android:textColor="@color/text_hint"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                app:layout_constraintStart_toEndOf="@id/githubIcon"
                app:layout_constraintEnd_toStartOf="@id/logoIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/topDivider"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="No hay alarmas creadas"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-light"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="16dp" />

    </LinearLayout>

    <!-- FAB with Monochrome Design -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="@color/white"
        app:backgroundTint="@color/button_enabled"
        app:elevation="8dp"
        app:hoveredFocusedTranslationZ="12dp"
        app:pressedTranslationZ="16dp"
        app:rippleColor="@color/ripple"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
